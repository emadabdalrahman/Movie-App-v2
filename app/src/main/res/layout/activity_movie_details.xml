<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.emad.movie_app.MovieDetailsActivity.MovieDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/movie_details_activity_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/movie_details_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>

    <fragment
        android:id="@+id/movie_details_fragment"
        android:name="com.example.emad.movie_app.MovieDetailsActivity.MovieDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/movie_details_activity_app_bar"
        tools:layout="@layout/movie_details_fragment" />


</RelativeLayout>
